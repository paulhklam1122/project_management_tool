<div class="container">
  <h1>Sign In</h1>
  <%= bootstrap_form_tag url: sessions_path do |f|%>
    <div class="text-left" >
      <%= f.email_field :email %>
      <%= f.password_field :password %>
    <%= submit_tag "Sign In", class: "btn btn-default btn-primary" %>
  <% end %>
  <%= label_tag "Forgot your password?" %>
  <%= link_to "Click Here", new_password_reset_path %>
  </div>
</div>
