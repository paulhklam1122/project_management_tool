<h1>Sign In</h1>
<%= form_tag sessions_path do %>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Sign In" %>
<% end %>
<%= label_tag "Forgot your password?" %>
<%= link_to "Click Here", new_password_reset_path %>
