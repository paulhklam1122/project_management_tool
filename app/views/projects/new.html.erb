<h1>New Project</h1>
<%= @project.errors.full_messages.join(", ") if @project %>
<%= bootstrap_form_for @project do |f| %>
  <div class="text-left" >
    <%= f.text_area :title %>
    <%= f.text_area :description %>
    <%= f.text_area :due_date %>
    <%= f.collection_check_boxes(:tag_ids, Tag.order(:title), :id, :title) %>
  </div>
    <%= f.submit class: "btn btn-default btn-primary"%>
<% end %>
